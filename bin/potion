#!/usr/bin/env ruby

require 'rubygems'
require "bundler/setup"
require 'potion'
require 'commander/import'

program :version, Potion::VERSION.to_s
program :description, 'A simple, extensible, static site generator that supports code, photos and files'
 
command :preview do |c|
  c.syntax = 'potion preview [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    site_root = `pwd`.strip
    if !options.no_auto.nil?
      site = Potion::Site.new(site_root)
      site.write_to(File.join(site_root, "_site"))
    else
      
    end
  end
end

